<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dk.eboks.app">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="false" />

    <application
        android:allowBackup="true"
        android:name="dk.eboks.app.App"
        android:icon="@mipmap/ic_launcher"
        android:label="${APP_NAME}"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- nstack app id and key from build.gradle manifest placeholder -->
        <meta-data
            android:name="dk.nodes.nstack.appId"
            android:value="${appId}"
            tools:replace="android:value"/>
        <meta-data
            android:name="dk.nodes.nstack.apiKey"
            android:value="${apiKey}"
            tools:replace="android:value"/>

        <!-- hockey id included from build.gradle manifest placeholder -->
        <meta-data android:name="net.hockeyapp.android.appIdentifier" android:value="${HOCKEYAPP_APP_ID}" />

        <activity android:name="dk.eboks.app.presentation.ui.screens.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="dk.eboks.app.presentation.ui.screens.debug.hinter.HintActivity" />
        <activity android:name="dk.eboks.app.presentation.ui.screens.debug.ComponentTestActivity" />
        <activity android:name="dk.eboks.app.presentation.ui.screens.debug.DebugActivity" />
        <activity android:name="dk.eboks.app.pasta.activity.PastaActivity" />
        <activity android:name="dk.eboks.app.presentation.ui.screens.mail.overview.MailOverviewActivity" />
        <activity android:name="dk.eboks.app.presentation.ui.screens.mail.list.MailListActivity" />
        <activity android:name="dk.eboks.app.presentation.ui.screens.mail.folder.FolderActivity" />
        <activity android:name="dk.eboks.app.presentation.ui.screens.message.MessageActivity" />
        <activity android:name="dk.eboks.app.presentation.ui.screens.message.sheet.MessageSheetActivity" />
    </application>
</manifest>