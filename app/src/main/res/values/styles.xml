<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>



    <style name="Header">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header.Dark">
        <item name="android:textColor">@color/darkGreyBlue</item>
    </style>

    <style name="Header.Light">
        <item name="android:textColor">@color/blueGrey</item>
    </style>

    <style name="Header.Rogue">
        <item name="android:textColor">@color/rouge</item>
    </style>


    <style name="Header.Dark.Zero">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Header.Dark.One">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Header.Dark.Two">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="Header.Light.Zero">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Header.Light.One">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Header.Light.Two">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Header.Rogue.Zero">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Header.Rogue.One">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Header.Rogue.Two">
        <item name="android:textSize">15sp</item>
    </style>


    <style name="Navigation">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Navigation.Dark">
        <item name="android:textColor">@color/darkGreyBlue</item>
    </style>

    <style name="Navigation.Light">
        <item name="android:textColor">@color/blueGrey</item>
    </style>

    <style name="Navigation.Rogue">
        <item name="android:textColor">@color/rouge</item>
    </style>


    <style name="Navigation.Dark.Zero">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Navigation.Dark.One">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Navigation.Dark.Two">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Navigation.Dark.Three">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Navigation.Light.Zero">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Navigation.Light.One">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Navigation.Light.Two">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Navigation.Light.Three">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Navigation.Rogue.Zero">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Navigation.Rogue.One">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Navigation.Rogue.Two">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Navigation.Rogue.Three">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Button.SolidGradient">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/rounded_gradient_button</item>
        <item name="android:height">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.OutlineGradient">
        <item name="android:textColor">@color/rouge</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/rounded_outline_gradient_button</item>
        <item name="android:height">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BadgeCount" >
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_gradient_button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
    </style>

