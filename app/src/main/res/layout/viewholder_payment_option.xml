<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/paymentOptionIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_normal"
            android:background="@drawable/circle_gradiant"
            android:padding="@dimen/margin_medium"
            android:src="@drawable/icon_48_alternative_bs_white" />

        <TextView
            android:id="@+id/paymentOptionTv"
            style="@style/text.header4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_normal"
            android:text="Register and pay with Betalingsservice" />



</LinearLayout>