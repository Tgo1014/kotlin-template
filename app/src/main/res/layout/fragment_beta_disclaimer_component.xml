<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:nstack="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text.header1"
            nstack:key="@string/nstack_firstopen_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text"
            android:layout_marginTop="36dp"
            nstack:key="@string/nstack_firstopen_message"/>
    </LinearLayout>

    <Button
        android:id="@+id/continueBtn"
        style="@style/enabledButtton"
        android:layout_alignParentBottom="true"
        android:layout_margin="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        nstack:key="@string/nstack_firstopen_letsGo"
        />

</RelativeLayout>