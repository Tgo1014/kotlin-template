<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nstack="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="false"
    android:background="@color/backgroundColor"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/channelsContentLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical" />


    <!-- empty state -->
    <LinearLayout
        android:id="@+id/emptyStateLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="@dimen/margin_normal"
        tools:visibility="visible"
        android:visibility="gone">

        <TextView
            android:id="@+id/bottomChannelHeaderTv"
            style="@style/text.header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/bottomChannelTextTv"
            style="@style/text.body6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="@dimen/default_padding_top"
            android:gravity="center"
            android:textColor="@color/blueGrey" />

        <Button
            android:id="@+id/bottomChannelBtn"
            style="@style/buttonRoundedCorners.darkBlueGrey"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14dp"
            android:textStyle="normal"
            nstack:key="@string/nstack_home_bottomChannelBtn" />
    </LinearLayout>

    <!-- progress -->
    <FrameLayout
        android:id="@+id/progressFl"
        tools:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>