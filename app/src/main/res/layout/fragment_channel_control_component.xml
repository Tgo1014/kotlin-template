<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="false"
    android:background="@color/backgroundColor"
    android:paddingTop="@dimen/padding_normal"
    android:paddingBottom="@dimen/padding_normal"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/channelsContentLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical" />


        <!-- channel teaser -->
        <LinearLayout
            android:id="@+id/teaserLl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingTop="@dimen/margin_normal"
            android:paddingRight="32dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:orientation="vertical"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    style="@style/text.header2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:gravity="center"
                    android:text="@string/nstack_home_bottomChannelHeaderChannels"
                    android:textStyle="normal" />

                <TextView
                    style="@style/text.body6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="@dimen/default_padding_top"
                    android:layout_marginRight="32dp"
                    android:gravity="center"
                    android:text="@string/nstack_home_bottomChannelTextChannels"
                    android:textColor="@color/blueGrey" />

            </LinearLayout>


            <Button
                android:id="@+id/teaserChannelBtn"
                style="@style/buttonRoundedCorners.darkBlueGrey"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/nstack_home_bottomChannelBtn"
                android:textSize="14dp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <!-- empty state -->
    <LinearLayout
        android:id="@+id/emptyStateChannelLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingTop="@dimen/margin_normal"
        android:paddingRight="32dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/bottomChannelHeaderTv"
            style="@style/text.header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/bottomChannelTextTv"
            style="@style/text.body6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="@dimen/default_padding_top"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:textColor="@color/blueGrey" />

        <Button
            android:id="@+id/bottomChannelBtn"
            style="@style/buttonRoundedCorners.darkBlueGrey"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/nstack_home_bottomChannelBtn"
            android:textSize="14dp"
            android:textStyle="normal" />
    </LinearLayout>

    <!-- progress -->
    <FrameLayout
        android:id="@+id/progressChannelFl"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>