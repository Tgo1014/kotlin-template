<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/segmentCv"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="4dp"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/card_elevation"
        app:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/segmentIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foreground="@drawable/rounded_gradient_card"
                    android:outlineProvider="background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_menu_home"/>

                <TextView
                    android:id="@+id/segmentTitleTv"
                    style="@style/text.buttonLarge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_normal"
                    android:gravity="center"
                    android:text="_Modtag din post digitalt fra alle offentlige myndigheder"
                    android:textColor="@color/colorPrimary"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/segmentBottomFl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_normal">

                <TextView
                    android:id="@+id/segmentCatTv"
                    style="@style/text.buttonSmall"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="top|left"
                    android:gravity="bottom"
                    android:text="Bolig og ejendom"/>

                <TextView
                    android:id="@+id/segmentSignTv"
                    style="@style/text.subHeader5.quaternary"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|left"
                    android:text="39 senders"/>

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="4dp"
                    android:background="@drawable/icon_48_arrow_right_grey"/>
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>