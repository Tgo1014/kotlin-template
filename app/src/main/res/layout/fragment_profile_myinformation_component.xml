<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:nstack="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix">

    <include layout="@layout/include_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <!--Name-->
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/nameEt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="12dp"
                        android:hint="_Name"
                        android:inputType="text"
                        android:theme="@style/MaterialTextInputLayoutMyProfileTheme"
                        app:met_floatingLabel="normal"
                        app:met_floatingLabelText="_name"
                        app:met_textColorHint="@color/blueGrey"
                        nstack:hint="@string/nstack_myInformation_name" />


                    <!--Primary email-->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/primaryMailEt"
                            style="@style/EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="12dp"
                            android:hint="_Primary email"
                            android:inputType="textEmailAddress"
                            android:theme="@style/MaterialTextInputLayoutMyProfileTheme"
                            app:met_bottomTextSize="12dp"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelText="_Primary email"
                            app:met_helperText="_You will be notified by e-mail when you recieve new mail"
                            app:met_helperTextAlwaysShown="true"
                            app:met_helperTextColor="@color/blueGrey"
                            app:met_hideUnderline="false"
                            app:met_primaryColor="@color/blueGrey"
                            app:met_textColorHint="@color/blueGrey"
                            app:met_underlineColor="@color/dividerGreyBlue"
                            nstack:hint="@string/nstack_myInformation_primaryEmail" />

                        <Button
                            android:id="@+id/verifyEmailBtn"
                            style="@style/button.SolidGradient"
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="12dp"
                            android:text="_Verify email"
                            android:textSize="7dp"
                            android:textStyle="normal"
                            nstack:text="@string/nstack_myInformation_verifyEmail" />


                    </FrameLayout>

                    <!--Secondary email-->

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/secondaryMailEt"
                            style="@style/EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="12dp"
                            android:hint="_Secondary email"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/blueGrey"
                            android:theme="@style/MaterialTextInputLayoutMyProfileTheme"
                            app:met_bottomTextSize="8dp"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelText="_Secondary email"
                            app:met_hideUnderline="false"
                            app:met_textColorHint="@color/blueGrey"
                            app:met_underlineColor="@color/dividerGreyBlue"
                            nstack:hint="@string/nstack_myInformation_secondaryEmail" />

                        <Button
                            android:id="@+id/verifySecondaryEmailBtn"
                            style="@style/button.SolidGradient"
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="12dp"
                            android:text="_Verify email"
                            android:textSize="7dp"
                            android:textStyle="normal"
                            nstack:text="@string/nstack_myInformation_verifyEmail" />


                    </FrameLayout>

                    <!--Mobile number-->

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/mobilEt"
                            style="@style/EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="12dp"
                            android:hint="_Mobile number"
                            android:inputType="phone"
                            android:paddingBottom="20dp"
                            android:textColorHint="@color/blueGrey"
                            android:theme="@style/MaterialTextInputLayoutMyProfileTheme"
                            app:met_bottomTextSize="12dp"
                            app:met_floatingLabel="normal"
                            app:met_floatingLabelText="_Mobile number"
                            app:met_helperText="_You will be notified by SMS when you recieve new mail"
                            app:met_helperTextAlwaysShown="true"
                            app:met_helperTextColor="@color/blueGrey"
                            app:met_hideUnderline="false"
                            app:met_textColorHint="@color/blueGrey"
                            app:met_underlineColor="@color/dividerGreyBlue"
                            nstack:hint="@string/nstack_myInformation_mobileNumber" />

                        <Button
                            android:id="@+id/verifyMobileNumberBtn"
                            style="@style/button.SolidGradient"
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="12dp"
                            android:text="_Verify email"
                            android:textSize="7dp"
                            android:textStyle="normal"
                            nstack:text="@string/nstack_myInformation_verifyNumber" />


                    </FrameLayout>
                </LinearLayout>

                <!--Newsletter-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dividerGreyBlue" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/margin_half"
                    android:background="@color/dividerGreyBlue" />

                <Switch
                    android:id="@+id/newsletterSw"
                    style="@style/text.header4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:paddingEnd="@dimen/margin_normal"
                    android:paddingStart="@dimen/margin_normal"
                    android:text="_newsletter" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dividerGreyBlue" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/progressFl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>
</FrameLayout>