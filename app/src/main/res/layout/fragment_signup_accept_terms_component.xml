<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nstack="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <include android:id="@+id/toolbarInclude" layout="@layout/include_toolbar" android:visibility="gone" />

    <LinearLayout
        android:id="@+id/termsHeaderLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="40dp">

        <!--Logo, header and subheader-->
        <ProgressBar
            style="@style/Progress.Onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="80"
            android:progressBackgroundTint="@color/white" />

        <TextView
            android:id="@+id/headerTv"
            style="@style/text.header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="_Welcome! To use e-Boks you need to accept the Terms and Conditions."
            nstack:key="@string/nstack_signup_termsAcceptHeader" />

        <TextView
            android:id="@+id/subHeaderTv"
            style="@style/text.body6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="8dp"
            android:text="_Please read and accept to continue"
            android:textColor="@color/blueGrey"
            nstack:key="@string/nstack_signup_termsAcceptSubHeader" />

    </LinearLayout>

    <include
        layout="@layout/include_divider"
        android:visibility="visible"></include>

    <!--Main content-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <WebView
            android:id="@+id/termsWV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
