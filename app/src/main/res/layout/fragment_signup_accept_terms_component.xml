    <!--Button-->

    <LinearLayout
        android:id="@+id/termsButtonsLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_top_corners_greyborder"
        android:orientation="vertical">

        <Button
            android:id="@+id/acceptBtn"
            nstack:key="@string/nstack_signup_termsAcceptButton"
            style="@style/button.SolidGradient"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="20dp"
            android:text="_I accept" />

        <Button
            android:id="@+id/cancelBtn"
            nstack:key="@string/nstack_signup_cancelTermsBtn"
            style="@style/button.borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
