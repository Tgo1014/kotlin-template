<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/publicAuthorityCardContainerCv"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/backgroundColorLl"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/rounded_gradient_card">

                <ImageView
                    android:id="@+id/backgroundIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:outlineProvider="background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_menu_home" />

                <TextView
                    android:id="@+id/headlineTv"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:gravity="center_vertical"
                    android:text="_Modtag din post digitalt fra alle offentlige myndigheder"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:paddingLeft="20.5dp"
                    android:paddingRight="20.5dp"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/text.header3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="_Offentlige myndigheder" />

                    <TextView
                        style="@style/text.subHeader5.quaternary"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="_Tilmeld dig her" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>