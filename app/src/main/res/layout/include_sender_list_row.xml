<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="top"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/dividerGreyBlue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_white_greyboarder">

            <ImageView
                android:layout_width="25.5dp"
                android:layout_height="25.5dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_48_delete_red"></ImageView>
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="16dp">


            <TextView
                style="@style/text.header4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Arbejdernes Landsbank"
                android:paddingRight="16dp"
                android:lines="1"
                android:ellipsize="end"/>



            <Button
                style="@style/buttonRoundedCorners.Tintable.darkText"
                android:layout_width="78.5dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/greyButton"
                android:text="_Register"
                android:textSize="14dp"
                android:textStyle="normal"
                android:stateListAnimator="@null"></Button>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>