<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardContainerCv"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:elevation="0dp"
        android:outlineProvider="none"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/backgroundIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineProvider="background"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_home" />


            <LinearLayout
                android:id="@+id/backgroundColorLl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/channels_card_background_rounded"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/headlineTv"
                    android:layout_width="295dp"
                    android:layout_height="124dp"
                    android:gravity="center_vertical"
                    android:text="NÃ¸glen til et rigere studieliv"
                    android:textColor="@color/white"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/logoIv"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/channels_small_background_rounded"
                        android:src="@drawable/ic_menu_home" />

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:text="Mecenat"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                    <Button
                        android:id="@+id/button"
                        style="@style/buttonRoundedCorners"
                        android:layout_width="63.5dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="20dp"
                        android:text="Install" />

                </LinearLayout>


            </LinearLayout>
        </FrameLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/headerTv"
        style="@style/text.header1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="36dp"
        android:text="Channels give you relevant information and actions directly on your e-boks home screen" />

</FrameLayout>