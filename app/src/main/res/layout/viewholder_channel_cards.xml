<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainerCv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:elevation="10dp"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp">

            <View
                android:id="@+id/backgroundColorV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineProvider="background"
                android:background="@drawable/channels_card_background_rounded"/>

            <!-- android:alpha needs to be 0. Otherwise old-phones don't draw the underlying view -->
            <!-- We set the alpha back to 0.2 in code after loading the image -->
            <ImageView
                android:id="@+id/backgroundIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineProvider="background"
                android:scaleType="centerCrop"
                android:alpha="0.0"
                android:src="@drawable/ic_menu_home" />


            <LinearLayout
                android:id="@+id/backgroundColorLl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/headlineTv"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:gravity="center_vertical"
                    android:text="NÃ¸glen til et rigere studieliv"
                    android:textColor="@color/white"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/channels_small_background_rounded"
                        >

                        <ImageView
                            android:id="@+id/logoIv"
                            android:padding="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_menu_home" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:text="Mecenat"
                        android:textColor="@color/white"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/openActionTv"
                        style="@style/buttonRoundedCorners"
                        android:textAppearance="@style/text.buttonLarge"
                        android:paddingStart="@dimen/padding_normal"
                        android:paddingEnd="@dimen/padding_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:text="_Install" />

                </LinearLayout>


            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/headerTv"
        style="@style/text.header1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="24dp"
        android:text="Channels give you relevant information and actions directly on your e-boks home screen" />

</FrameLayout>