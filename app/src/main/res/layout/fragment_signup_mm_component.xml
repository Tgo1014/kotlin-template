<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:background="@color/backgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/include_toolnar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="36dp"
                android:paddingRight="36dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/backgroundColor"
                    android:layout_marginTop="40dp"
                    android:elevation="0.5dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="20dp">
                    <ProgressBar
                        style="@style/OnboardingProgress"
                        android:progressBackgroundTint="@color/white"
                        android:progress="85"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/headerTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/text.header1"
                    android:text="Header"/>

                <TextView
                    android:id="@+id/detailTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/text.body6.secondary"
                    android:text="_Please fill in the information below"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cprTil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:theme="@style/TextInputLayoutTheme"
                    android:textColorHint="@color/blueGrey"
                    app:hintTextAppearance="@style/HintTextAppearance"
                    android:hint="_cpr">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/cprEt"
                        style="@style/EditText"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/signupWithMMBtn"
                    style="@style/button.SolidGradient"
                    android:layout_width="match_parent"
                    android:layout_marginTop="32dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:text="_Continue" />

                <TextView
                    android:id="@+id/continueWithoutMMTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/text.button.tertiary"
                    android:text="_Continue without verification"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/progress"
        android:visibility="gone"
        android:background="@color/backgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>