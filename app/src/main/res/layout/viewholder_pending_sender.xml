<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="1dp"
             android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pendingMainLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:minHeight="72dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pendingLogoIv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:background="@drawable/circle_white_greyborder"
                android:padding="8dp"
                android:src="@drawable/icon_48_delete_red"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="@dimen/margin_normal">

                <TextView
                    android:id="@+id/pendingNameTv"
                    style="@style/text.header4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Arbejdernes Landsbank"/>


                <Button
                    android:id="@+id/pendingRegisterBtn"
                    style="@style/buttonRoundedCorners.darkBlueGrey.small"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:text="_approve"
                    android:visibility="visible"/>

                <ImageButton
                    android:id="@+id/pendingCloseBtn"
                    style="@style/buttonRoundedCorners.darkBlueGrey.small"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_cross"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/pendingDescriptionTv"
            style="@style/text.body6.secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="-8dp"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:text="Arbejdernes Landsbank"/>
    </LinearLayout>
</FrameLayout>