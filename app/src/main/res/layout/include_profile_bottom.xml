<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <!--My information-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/profileDetailContainerMyInformation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            android:text="@string/nstack_profile_myInformation"
            android:textAppearance="@style/text.header4"
            tools:text="_My information" />
    </FrameLayout>

    <include
        layout="@layout/include_divider"
        android:visibility="visible" />

    <!--Fingerprint and keep me signed in-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <include
            layout="@layout/include_divider"
            android:visibility="visible" />

        <!--Fingerprint switch-->

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/profileDetailSwFingerprint"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textColor="@color/darkGreyBlue"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/margin_normal"
            android:text="@string/nstack_profile_fingerprint"
            android:textAppearance="@style/text.header4"
            android:thumbTint="@drawable/switch_thumb"
            android:trackTint="@drawable/switch_track"
            tools:text="_Fingerprint" />

        <include layout="@layout/include_divider_leftmargin_whitebackground" />


        <!--Keep me signed in switch-->

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/profileDetailSwKeepSignedIn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/margin_normal"
            android:text="@string/nstack_profile_keepMeSignedIn"
            android:textAppearance="@style/text.header4"
            android:textColor="@color/darkGreyBlue"
            android:thumbTint="@drawable/switch_thumb"
            android:trackTint="@drawable/switch_track"
            tools:text="_Keep me signed in" />

    </LinearLayout>

    <include
        layout="@layout/include_divider"
        android:visibility="visible" />

    <!-- keep me signed in text-->
    <TextView
        style="@style/text.subHeader5.quaternary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textSize="13sp"
        android:paddingRight="16dp"
        android:text="@string/nstack_profile_keepMeSignedInDescription"
        android:textStyle="normal"
        android:textColor="@color/blueGrey"
        tools:text="_Keep me signed in when i close the e-boks app orem ipsum dolor sit amet" />

    <include
        layout="@layout/include_divider"
        android:visibility="visible" />

    <!--Terms & Conditions-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/profileDetailContainerTerms"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:elevation="0dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="left|center_vertical"
            android:textColor="@color/darkGreyBlue"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            android:text="@string/nstack_profile_termsAndConditions"
            android:textAppearance="@style/text.header4"
            tools:text="_Terms and Conditions" />

    </FrameLayout>

        <!--Privacy Statement-->
    <include layout="@layout/include_divider_leftmargin_whitebackground" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/profileDetailContainerPrivacy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:elevation="0dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="start|center_vertical"
            android:paddingLeft="@dimen/margin_normal"
            android:textColor="@color/darkGreyBlue"
            android:paddingRight="@dimen/margin_normal"
            android:text="@string/nstack_profile_privacyStatement"
            android:textAppearance="@style/text.header4"
            tools:text="_Privacy Statement" />

    </FrameLayout>


    <include
        layout="@layout/include_divider"
        android:visibility="visible" />

    <!--Help-->


    <include
        layout="@layout/include_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:visibility="visible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/profileDetailContainerHelp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:elevation="0dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            android:textColor="@color/darkGreyBlue"
            android:text="@string/nstack_profile_help"
            android:textAppearance="@style/text.header4"
            tools:text="_help" />
    </FrameLayout>

    <include layout="@layout/include_divider_leftmargin_whitebackground" />

    <!--Feedback-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/profileDetailContainerFeedback"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:elevation="0dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            android:textColor="@color/darkGreyBlue"
            android:text="@string/nstack_profile_feedbackCellTitle"
            android:textAppearance="@style/text.header4"
            tools:text="_feedback" />
    </FrameLayout>

    <include
        layout="@layout/include_divider"
        android:visibility="visible" />

    <!--Sign out Button-->

    <Button
        android:id="@+id/profileDetailBtnSignout"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/nstack_profile_signOut"
        style="@style/buttonRoundedCorners.darkBlueGrey"
        tools:text="_Sign out" />



    <!--Version textView-->

    <TextView
        android:id="@+id/profileDetailTvVersion"
        style="@style/text.subHeader5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="_Version 4.0.0"
        android:textColor="@color/blueGrey" />


</LinearLayout>