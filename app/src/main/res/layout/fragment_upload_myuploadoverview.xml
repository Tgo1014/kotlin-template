<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/rowsContainerLl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/uploadsRv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/fabContainerRl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|right"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/moveFab"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/deleteFab"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/white"
            android:clickable="true" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/deleteFab"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/printFab"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:src="@drawable/icon_48_share_red" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/printFab"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/mailFab"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:src="@drawable/icon_48_share_red" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/mailFab"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/openInFab"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_48_share_red" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/openInFab"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            app:useCompatPadding="false"
            app:srcCompat="@drawable/icon_48_share_red"
            android:layout_marginBottom="88dp"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mainFab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/icon_48_option_white" />


</android.support.design.widget.CoordinatorLayout>