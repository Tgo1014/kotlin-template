<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:nstack="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:ignore="MissingPrefix">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_normal"
                android:paddingRight="@dimen/margin_normal">

                <!--Name-->
                <TextView
                    android:id="@+id/nameHintTv"
                    style="@style/text.subHeader5.quaternary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    nstack:text="@string/nstack_ekey_name"
                    tools:text="Name" />

                <TextView
                    android:id="@+id/nameTv"
                    style="@style/text.header4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Name" />

                <!--Pin-->
                <TextView
                    android:id="@+id/cardholderHintTv"
                    style="@style/text.subHeader5.quaternary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    nstack:text="@string/nstack_ekey_pinCode"
                    tools:text="Pin code"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/cardholderTv"
                    style="@style/text.header4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:text="_[Cardholder Name]"
                    tools:visibility="visible" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pinContainerFl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/pinHintTv"
                        style="@style/text.subHeader5.quaternary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintEnd_toStartOf="@+id/pinShowPasswordIb"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        nstack:text="@string/nstack_ekey_pinCode"
                        tools:text="Pin code" />

                    <TextView
                        android:id="@+id/pinTv"
                        style="@style/text.header4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="_Pin code"
                        app:layout_constraintEnd_toStartOf="@+id/pinShowPasswordIb"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pinHintTv" />

                    <ImageButton
                        android:id="@+id/pinShowPasswordIb"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@color/white"
                        android:src="@drawable/show_password_selector"
                        app:layout_constraintBottom_toBottomOf="@+id/pinTv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/pinTv" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--username and login-->
                <LinearLayout
                    android:id="@+id/loginContainerLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/usernameHintTv"
                            style="@style/text.subHeader5.quaternary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintEnd_toStartOf="@+id/copyUsernameBtn"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            nstack:text="@string/nstack_ekey_username"
                            tools:text="User Name" />

                        <TextView
                            android:id="@+id/usernameTv"
                            style="@style/text.header4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="_Username"
                            app:layout_constraintEnd_toStartOf="@+id/copyUsernameBtn"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/usernameHintTv" />

                        <ImageButton
                            android:id="@+id/copyUsernameBtn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="right|center"
                            android:background="@color/white"
                            android:src="@drawable/icon_48_copy_red"
                            app:layout_constraintBottom_toBottomOf="@+id/usernameTv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/usernameTv" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/passwordHintTv"
                            style="@style/text.subHeader5.quaternary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintEnd_toStartOf="@+id/passwordShowPasswordIb"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Password"
                            android:layout_marginEnd="8dp"
                            nstack:text="@string/nstack_ekey_password" />

                        <TextView
                            android:id="@+id/passwordTv"
                            style="@style/text.header4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/passwordShowPasswordIb"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/passwordHintTv"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="_Password" />

                        <ImageButton
                            android:id="@+id/passwordShowPasswordIb"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="end|center"
                            android:background="@color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/passwordTv"
                            app:layout_constraintEnd_toStartOf="@+id/copyPasswordBtn"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintTop_toTopOf="@+id/passwordTv"
                            android:src="@drawable/show_password_selector" />

                        <ImageButton
                            android:id="@+id/copyPasswordBtn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="end|center"
                            android:background="@color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/passwordTv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/passwordTv"
                            android:src="@drawable/icon_48_copy_red" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <!--Note -->
                <TextView
                    android:id="@+id/noteHeaderTv"
                    style="@style/text.subHeader5.quaternary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    tools:text="Notes"
                    nstack:text="@string/nstack_ekey_addItemNote" />

                <TextView
                    android:id="@+id/noteTv"
                    style="@style/text.header4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    tools:text="Notes"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <Button
                android:id="@+id/editBtn"
                style="@style/buttonRoundedCorners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="40dp"
                android:textColor="@color/darkGreyBlue"
                nstack:text="@string/nstack_ekey_edit"
                tools:text="Edit" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>