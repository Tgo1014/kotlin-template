<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

    <TextView
        style="@style/text.header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="32dp"
        android:text="_Verify your mobile number" />

    <TextView
        style="@style/text.body6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="_Lorem ipsum dolor sit amet consectetur adipiscing elit. Integer cursus dui."
        android:textColor="@color/blueGrey" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/verificationCodeTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="_Verification code"
        android:textColorHint="@color/blueGrey"
        android:theme="@style/TextInputLayoutTheme"
        app:errorTextAppearance="@style/errorappearance"
        app:hintTextAppearance="@style/HintTextAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/verificationCodeEt"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/signupBtn"
        style="@style/buttonRoundedCorners.darkBlueGrey"
        android:backgroundTint="#0D223944"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="52dp"
        android:layout_marginBottom="12dp"
        android:textSize="16dp"
        android:text="_Resend code" />

    <Button
        android:id="@+id/logonBtn"
        style="@style/button.SolidGradient"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="16dp"
        android:text="_Continue" />

    <Button
        android:id="@+id/redOptionTv"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        style="@style/button.borderless"
        android:text="_Cancel"/>


</LinearLayout>