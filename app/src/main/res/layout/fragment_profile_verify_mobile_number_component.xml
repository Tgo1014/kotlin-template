<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:nstack="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">

    <!--
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

        -->

    <TextView
        style="@style/text.header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="32dp"
        tools:text="_Verify your mobile number"
        android:text="@string/nstack_profile_verifyMobilHeader"/>

    <TextView
        android:id="@+id/verifyNumberSubTv"
        style="@style/text.body6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="@string/nstack_profile_verifyMobilText"
        android:textColor="@color/blueGrey" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/verificationCodeTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColorHint="@color/blueGrey"
        android:theme="@style/TextInputLayoutTheme"
        app:errorTextAppearance="@style/errorappearance"
        app:hintTextAppearance="@style/HintTextAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/verificationCodeEt"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            nstack:hint="@string/nstack_profile_verifyMobilHintText"/>

    </android.support.design.widget.TextInputLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/buttonsLl"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/resendBtn"
                style="@style/buttonRoundedCorners.darkBlueGrey"
                android:backgroundTint="#0D223944"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="52dp"
                android:layout_marginBottom="12dp"
                android:textSize="16dp"
                tools:text="_Resend code"
                android:text="@string/nstack_profile_verifyMobilResend"/>

            <Button
                android:id="@+id/verifyBtn"
                style="@style/button.SolidGradient"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textSize="16dp"
                tools:text="_Continue"
                android:text="@string/nstack_profile_verifyMobileContinueBtn"/>

            <Button
                android:id="@+id/cancelBtn"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                style="@style/button.borderless"
                tools:text="_Cancel"
                android:text="@string/nstack_profile_verifyMobilCancel"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/progressFl"
            android:visibility="gone"
            android:background="@color/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>