<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_toolnar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="36dp"
            android:paddingRight="36dp">

            <ProgressBar
                style="@style/OnboardingProgress"
                android:progress="50"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text.header1"
                android:text="Lets get started"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/text.body6.secondary"
                android:text="_Please fill in the information below"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:theme="@style/TextInputLayoutTheme"
                android:textColorHint="@color/blueGrey"
                app:hintTextAppearance="@style/HintTextAppearance"
                android:hint="_Name">

                <android.support.design.widget.TextInputEditText
                    style="@style/EditText"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:theme="@style/TextInputLayoutTheme"
                android:textColorHint="@color/blueGrey"
                app:hintTextAppearance="@style/HintTextAppearance"
                android:hint="_Email">

                <android.support.design.widget.TextInputEditText
                    style="@style/EditText"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/signupBtn"
                style="@style/buttonRoundedCorners.darkBlueGrey"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:text="_Continue" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>