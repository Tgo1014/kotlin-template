<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nstack="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/containerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/headerTv"
            style="@style/text.header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="_Settings"
            nstack:text="@string/nstack_settings_header" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="top"
            android:background="@color/dividerColor" />


        <!--pin home screen and push notifications view-->
        <LinearLayout
            android:id="@+id/mainSwitchContainerLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:orientation="vertical"
            android:paddingBottom="8dp">


            <LinearLayout
                android:id="@+id/pinContainerLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pinHeaderTv"
                        style="@style/text.header4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        nstack:text="@string/nstack_settings_pinHeader" />

                    <TextView
                        android:id="@+id/pinSubHeaderTv"
                        style="@style/text.subHeader5.quaternary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        nstack:text="@string/nstack_settings_pinSubHeader" />

                </LinearLayout>

                <Switch
                    android:id="@+id/pinSliderSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:thumbTint="@drawable/switch_thumb"
                    android:trackTint="@drawable/switch_track" />

            </LinearLayout>


            <View
                android:id="@+id/rowDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="top"
                android:layout_marginLeft="16dp"
                android:background="@color/dividerColor" />

            <LinearLayout
                android:id="@+id/notificationContainerLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notificationHeaderTv"
                        style="@style/text.header4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="_Pin to home screen"
                        nstack:text="@string/nstack_channelsettings_pushTitle" />

                    <TextView
                        android:id="@+id/notificationSubHeaderTv"
                        style="@style/text.subHeader5.quaternary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="_Show this channel on the e-Boks home screen"
                        nstack:text="@string/nstack_channelsettings_pushSubtitle" />

                </LinearLayout>

                <Switch
                    android:id="@+id/notificationSliderSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:thumbTint="@drawable/switch_thumb"
                    android:trackTint="@drawable/switch_track" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="top"
                android:background="@color/dividerColor" />


        </LinearLayout>

        <!-- optional pins -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="top"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:id="@+id/optionalSwitchContainerLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/optionalHeaderTv"
                        style="@style/text.header4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="_Receive only receipts digitally"
                        nstack:text="@string/nstack_channelsettingsstoreboxadditions_digitalReceiptsTitle" />

                    <TextView
                        android:id="@+id/optionalSubHeaderTv"
                        style="@style/text.subHeader5.quaternary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="_Accepting this you not recieve paper"
                        nstack:text="@string/nstack_channelsettingsstoreboxadditions_digitalReceiptsMessage" />

                </LinearLayout>

                <Switch
                    android:id="@+id/optionalSliderSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:thumbTint="@drawable/switch_thumb"
                    android:trackTint="@drawable/switch_track" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="top"
                android:background="@color/dividerColor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/creditCardContainerLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/creditCardHeaderTv"
                style="@style/text.header3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/backgroundColor"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="20dp"
                android:text="_Credit cards"
                nstack:text="@string/nstack_settings_creditCardHeader" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="top"
                android:background="@color/dividerColor" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/creditcardRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <FrameLayout
                    android:id="@+id/addCardFl"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_white_greyborder">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_48_plus_black_big" />

                </FrameLayout>

                <TextView
                    style="@style/text.header4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="_Add another credit card"
                    nstack:text="@string/nstack_channelsettings_addAnotherCard" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="top"
                android:background="@color/dividerColor" />

        </LinearLayout>


        <!--bottom openActionTv-->

        <Button
            android:id="@+id/removeChannelBtn"
            style="@style/buttonRoundedCorners"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            nstack:key="@string/nstack_settings_removeChannelBtn" />


    </LinearLayout>

    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>