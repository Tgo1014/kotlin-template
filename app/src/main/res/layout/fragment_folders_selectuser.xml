<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              xmlns:nstack="http://schemas.android.com/apk/res-auto"
              tools:ignore="MissingPrefix">

    <TextView
        style="@style/text.header1"
        android:id="@+id/headerTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="_Select folder"
        nstack:text="@string/nstack_sharedusers_title"/>

    <LinearLayout
        android:id="@+id/myProfileLl"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/profileFl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:background="@drawable/circular_image_view_no_inner_circle_background">

            <ImageView
                android:id="@+id/logoIv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_48_profile_grey" />
        </FrameLayout>

        <ImageView
            android:id="@+id/profilePicIv"
            android:layout_marginLeft="16dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myProfileNameTv"
                style="header4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="_Helene l. Christensen" />

            <TextView
                android:id="@+id/myProfileSubHeaderTv"
                style="@style/text.subHeader5.quaternary"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="_My profile" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text.header3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_half"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginTop="20dp"
        android:text="_My shared accounts"
        nstack:text="@string/nstack_sharedusers_sharedAccountsHeader"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sharedAccountsRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal" />

</LinearLayout>