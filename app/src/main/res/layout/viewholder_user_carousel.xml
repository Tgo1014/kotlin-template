<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:clipToPadding="false"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCv"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:visibility="visible"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:id="@+id/clickLl"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="?selectableItemBackground">

            <ImageView
                android:id="@+id/avatarIv"
                android:layout_gravity="center"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_transparent_greyblue_border"/>

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                style="@style/text.header3"
                android:textColor="@color/darkGreyBlue"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/deleteIv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_red_close"
            android:tint="@color/blueGrey"
            android:background="@drawable/rounded_grey_background"
            android:layout_gravity="center_horizontal|end"/>

        <TextView
            android:id="@+id/debugInfoTv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textAllCaps="true"
            android:textColor="@color/textColorTertiary"
            android:layout_gravity="start|top"
            android:textStyle="bold"
            android:textSize="8dp"/>

        <TextView
            android:id="@+id/hintTv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="8dp"
            android:textAllCaps="true"
            android:textColor="@color/textColorSecondary"
            android:layout_gravity="end|bottom"
            android:text="LONG TAP TO EDIT"
            android:textStyle="bold"
            android:textSize="8dp"/>

    </androidx.cardview.widget.CardView>
</FrameLayout>