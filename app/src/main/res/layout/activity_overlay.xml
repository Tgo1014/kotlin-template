<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/testrl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/transparent_gradiant"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="?actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/buttonContainerLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/mainFab">

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mainFab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:backgroundTint="@color/fabButtonColor"
        android:scaleType="center"
        android:src="@drawable/icon_48_close_white" />

</RelativeLayout>