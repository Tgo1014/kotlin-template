<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="284dp"
    android:background="@drawable/square_gradient">


    <!--White circle and logo-->
    <FrameLayout
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/circle_white" />

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu_mail" />

    </FrameLayout>

    <!--Company name-->
    <TextView
        style="@style/text.header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="164dp"
        android:text="Radius"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <!--Registered-->
    <LinearLayout
        style="@style/buttonRoundedCorners.Tintable"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/white"
        android:gravity="center">

        <TextView
            style="@style/text.button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="@color/rouge" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/icon_48_checkmark_white"
            android:visibility="gone" />

    </LinearLayout>

    <!-- X-Button -->

    <ImageView
        android:src="@drawable/icon_48_close_white_navigationbar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:clickable="true"/>

</FrameLayout>