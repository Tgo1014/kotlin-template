<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:nstack="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

    <TextView
        style="@style/text.header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="32dp"
        android:text="_Enable fingerprint"
        nstack:key="@string/nstack_profile_fingerDrawerHeader"
        />

    <TextView
        style="@style/text.body6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="_Lorem ipsum dolor sit amet consectetur adipiscing elit. Integer cursus dui."
        nstack:key="@string/nstack_profile_fingerDrawerText"
        android:textColor="@color/blueGrey" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/socialSecurityTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/blueGrey"
        android:theme="@style/TextInputLayoutTheme"
        app:errorTextAppearance="@style/errorappearance"
        app:hintTextAppearance="@style/HintTextAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/socialSecurityEt"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            nstack:hint="@string/nstack_logoncredentials_ssnHeader"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordTil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/blueGrey"
        android:theme="@style/TextInputLayoutTheme"
        app:errorTextAppearance="@style/errorappearance"
        app:hintTextAppearance="@style/HintTextAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/passwordEt"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            nstack:hint="@string/nstack_logoncredentials_passwordfieldHeader"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/enableBtn"
        style="@style/enabledButtton"
        android:textColor="@drawable/enabled_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:enabled="false"
        android:text="_Enable"
        nstack:key="@string/nstack_profile_enable"/>

    <Button
        android:id="@+id/redOptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        style="@style/button.borderless"
        android:textStyle="bold"
        android:text="_Cancel"
        nstack:key="@string/nstack_default_ok"/>

</LinearLayout>