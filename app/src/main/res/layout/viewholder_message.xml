<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rootLl">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <ImageView
            android:id="@+id/circleIv"
            android:padding="8dp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circular_image_view_no_inner_circle_background"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">
            <TextView
                android:id="@+id/titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7sp"
                style="@style/text.header3"
                android:text="_Name"/>
            <TextView
                android:id="@+id/subTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                style="@style/text.subHeader5.quaternary"
                android:text="_Inbox"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/urgentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7sp"
                style="@style/text.subHeader5.tertiary"
                android:text="_Inbox"/>
        </LinearLayout>

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text.subHeader5"
            android:textColor="@color/blueGrey"
            android:text="_Today"/>
    </LinearLayout>
    <View
        android:id="@+id/dividerV"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="72dp"
        android:background="@color/dividerGreyBlue" />
</LinearLayout>