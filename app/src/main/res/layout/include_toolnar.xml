<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/mainAppbar"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                            android:elevation="0dp"
                                            app:elevation="0dp"
                                            android:background="@android:color/transparent"
                                            >

    <android.support.v7.widget.Toolbar
        android:id="@+id/mainTb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageButton
            android:id="@+id/toolbarIb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_vertical"
            android:src="@drawable/ic_menu_home"
            android:tint="@color/toolbar_item_selector" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/toolbarTv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="16dp"
                android:text="_Main"
                android:textAppearance="@style/text.header2" />

            <TextView
                android:id="@+id/toolbarSubTv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="16dp"
                android:text="_Main"
                android:textAppearance="@style/text.subHeader5.quaternary"
                android:textColor="@color/blueGrey" />

        </LinearLayout>

        <TextView
            android:id="@+id/userShareTv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            style="@style/text.header3"
            android:drawableEnd="@drawable/ic_chevron_down"
            android:background="@drawable/rounded_grey_background"
            android:textColor="@color/darkGreyBlue"
            android:text="Helena Christensen"
            />
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/toolbarLargeTv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginBottom="6dp"
        android:textSize="34sp"
        style="@style/text.header3"
        android:text="_All mail"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerGreyBlue" />
</android.support.design.widget.AppBarLayout>