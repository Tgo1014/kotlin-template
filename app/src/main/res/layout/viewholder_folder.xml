<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="18dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="18dp">

        <ImageView
            android:id="@+id/iconIv"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/nameTv"
            style="@style/text.header3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="Inbox" />

        <FrameLayout
            android:id="@+id/arrowFl"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/badgeCountTv"
                style="@style/badgeCount"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="2"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/chevronRightIv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right" />
        </FrameLayout>


        <ImageButton
            android:id="@+id/checkboxIb"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_checkbox_selector"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/editIb"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/icon_48_edit_red"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:id="@+id/underLineV"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="56dp"
        android:background="@color/dividerColor"
        android:visibility="gone" />


    <!--<FrameLayout-->
        <!--android:id="@+id/overlayFl"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/transparentOverlay"-->
        <!--android:visibility="gone"-->
        <!--/>-->

</FrameLayout>