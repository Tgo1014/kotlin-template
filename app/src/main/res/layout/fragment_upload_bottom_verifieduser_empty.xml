<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:layout_marginTop="40dp"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <TextView
        style="@style/text.header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="_Get 1 GB free storage" />

    <TextView
        style="@style/text.body6.secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="_All you have to do is verify your profile lorem ipsum dolor sit amet integer lorem lorem ipsum dolor sit" />

    <Button
        android:id="@+id/verifyProfileBtn"
        style="@style/buttonRoundedCorners.darkBlueGrey"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal"
        android:text="_verify profile"
        android:textColor="@color/darkGreyBlue" />

</LinearLayout>