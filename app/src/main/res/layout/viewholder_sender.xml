<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="@color/white"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/senderIndexTv"
        style="@style/text.header3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:lines="1"
        android:text="A"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/senderMainLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="?selectableItemBackground">

        <ImageView
            android:id="@+id/senderLogoIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@drawable/circle_white_greyborder"
            android:padding="8dp"
            android:src="@drawable/icon_48_delete_red"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/senderNameTv"
                style="@style/text.header4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_normal"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="Arbejdernes Landsbank"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"
                android:background="@color/dividerGreyBlue"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>