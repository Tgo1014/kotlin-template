<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/touchVeilV"
        android:background="#88000000"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/contextSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <android.support.v4.widget.NestedScrollView
            android:background="@drawable/context_sheet_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clipToPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="350dp"
                    style="@style/Navigation.Dark.One"
                    android:layout_gravity="center"
                    android:text="Hej per har du savnet mig?"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <View
            android:id="@+id/contextSheetHandle"
            android:elevation="2dp"
            android:layout_width="52dp"
            android:layout_height="5dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/sheet_handle"
            android:layout_gravity="center_horizontal"
            />
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>