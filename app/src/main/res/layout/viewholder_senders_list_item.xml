<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/topDividerV"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginStart="@dimen/margin_normal"
        android:background="@color/dividerColor"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/rippeldark"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/circleIv"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circular_image_view_no_inner_circle_background"
            android:padding="8dp" />


        <TextView
            android:id="@+id/titleTv"
            style="@style/text.header4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="_alka" />

        <TextView
            android:visibility="gone"
            android:id="@+id/unreadCountTv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_half"
            android:background="@drawable/circle_gradiant"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

    <View
        android:id="@+id/dividerV"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="72dp"
        android:background="@color/dividerColor" />
</LinearLayout>