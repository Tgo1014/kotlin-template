<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <include layout="@layout/include_toolbar" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshSrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/mailHeaderFl"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingRight="@dimen/margin_normal">

                    <TextView
                        style="@style/text.header2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/nstack_home_messagesHeader"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/showBtn"
                        style="@style/buttonRoundedCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_gravity="end|center_vertical"
                        android:enabled="true"
                        android:paddingLeft="12dp"
                        android:textStyle="normal"
                        android:paddingRight="12dp"
                        android:text="@string/nstack_home_messagesSectionHeaderShowAllButton"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:visibility="visible"
                        tools:text="Show all" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/folderPreviewFl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <FrameLayout
                    android:id="@+id/channelsHeaderFl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingRight="@dimen/margin_normal">

                    <TextView
                        style="@style/text.header2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/nstack_home_channelsHeader" />

                    <Button
                        android:id="@+id/editChannelsBtn"
                        style="@style/buttonRoundedCorners"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_gravity="end|center_vertical"
                        android:textColor="@color/darkGreyBlue"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="gone"
                        android:text="@string/nstack_home_channelsHeaderButton" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/channelControlFl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/backgroundColor" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include layout="@layout/include_navigation_view" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
