<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoIv"
        android:transitionName="eboksLogoTransition"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/eboks_logo"/>

    <dk.eboks.app.presentation.widgets.DottedViewPager
        android:id="@+id/viewPager"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="164dp"/>

    <Button
        android:id="@+id/signupBtn"
        style="@style/buttonRoundedCorners.darkBlueGrey"
        android:transitionName="signUpButtonTransition"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_gravity="bottom"
        android:text="_Sign up" />

</FrameLayout>