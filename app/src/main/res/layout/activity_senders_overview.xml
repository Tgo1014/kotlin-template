<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <include layout="@layout/include_toolbar"/>

    <include layout="@layout/include_navigation_view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:background="@color/backgroundColor"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_normal"
            android:animateLayoutChanges="true">

            <Button
                android:id="@+id/senderPendingBtn"
                style="@style/button.SolidGradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_normal"
                android:drawableLeft="@drawable/icon_48_senders_white"
                android:drawablePadding="@dimen/margin_normal"
                android:gravity="left|center_vertical"
                android:text="Yending"/>

            <LinearLayout
                android:id="@+id/sendersCollectionContainerLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true" />

            <fragment
                android:id="@+id/sendersCategoriesFrag"
                android:name="dk.eboks.app.presentation.ui.senders.components.categories.CategoriesComponentFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
