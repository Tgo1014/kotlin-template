<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/logoIv"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:transitionName="eboksLogoTransition"
        app:layout_constraintBottom_toTopOf="@+id/logonBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/eboks_dk_logo" />


    <Button
        android:id="@+id/logonBtn"
        style="@style/button.SolidGradient"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="12dp"
        android:text="@string/nstack_start_logonButton"
        app:layout_constraintBottom_toTopOf="@+id/signupBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="_Log on" />

    <Button
        android:id="@+id/signupBtn"
        style="@style/buttonRoundedCorners.darkBlueGrey"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="24dp"
        android:text="@string/nstack_start_signupButton"
        android:transitionName="signUpButtonTransition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="_Sign up" />

    <!--
        <Button
            android:id="@+id/debugCreateBtn"
            android:visibility="gone"
            style="@style/buttonRoundedCorners.darkBlueGrey"
            android:backgroundTint="#223944"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:text="Skip to app (DEBUG)" />
            -->


    <TextView
        android:id="@+id/debugOptionsTv"
        style="@style/text.buttonSmall.tertiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Debug options"
        android:textAllCaps="true"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/debugCreateUserTv"
        style="@style/text.buttonSmall.tertiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        tools:visibility="visible"
        android:text="Create user"
        android:textAllCaps="true"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>