<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp" />
            <gradient
                android:endColor="#bc1f30"
                android:startColor="#872058"
                android:angle="135">
            </gradient>
            <corners android:radius="18dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:left="2.5dp" android:right="2.5dp" android:top="2.5dp" android:bottom="2.5dp" />
            <solid android:color="@color/white" android:width="1dp" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" android:width="1dp" />
            <corners android:radius="18dp" />
        </shape>
    </item>
</layer-list>